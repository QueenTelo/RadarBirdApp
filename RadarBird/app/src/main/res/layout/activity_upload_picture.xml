<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/add_observation"
    android:layout_height="match_parent"

    tools:context=".uploadPicture">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="500dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        android:layout_marginStart="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <LinearLayout
            android:layout_width="350dp"
            android:layout_height="530dp"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="50dp"
            android:background="@drawable/pink_boarder"
            android:orientation="vertical"
            android:padding="20dp">

            <ImageView
                android:id="@+id/capturePicture"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginStart="50dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:clickable="true"
                android:scaleType="fitXY"
                android:src="@drawable/baseline_photo_camera_back_24" />

            <EditText
                android:id="@+id/uploadPictureTitle"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pink_boarder"
                android:gravity="start|center_vertical"
                android:hint="Enter The Title"
                android:padding="16dp"
                android:textColor="@color/pink" />

            <EditText
                android:id="@+id/uploadPictureDate"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pink_boarder"
                android:gravity="start|center_vertical"
                android:hint="Enter The date"
                android:padding="16dp"
                android:textColor="@color/pink" />

            <EditText
                android:id="@+id/uploadPictureLocation"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pink_boarder"
                android:gravity="start|center_vertical"
                android:hint="Enter The Location"
                android:padding="16dp"
                android:textColor="@color/pink" />

            <EditText
                android:id="@+id/uploadPictureDescrption"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/pink_boarder"
                android:gravity="start|center_vertical"
                android:hint="Enter The Descrption"
                android:padding="16dp"
                android:textColor="@color/pink" />


            <Button
                android:id="@+id/saveButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/pink_boarder"
                android:text="SAVE"
                android:textSize="18sp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</ScrollView>